{
  "name": "smartdeck",
  "version": "1.0.0",
  "description": "Ozan's Smart Deck.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "rebuild": "electron-rebuild"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ozancs/smartdeck.git"
  },
  "keywords": [],
  "author": "Ozan Sahin",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "ozancs",
        "repo": "smartdeck"
      }
    ],
    "appId": "com.ozan.smartdeck",
    "productName": "Smart Deck",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map",
      "!package-lock.json",
      "!dist",
      "!out",
      "!**/*.md",
      "!.git",
      "!.github",
      "!.vscode",
      "!arduino_codes",
      "!backup",
      "!src"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "plugins",
        "to": "plugins",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "robotjs": "^0.6.0"
  }
}