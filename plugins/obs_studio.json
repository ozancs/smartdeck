{
  "meta": {
    "id": "obs_studio",
    "name": "OBS Studio",
    "author": "SmartDeck",
    "version": "1.0.0",
    "description": "Streaming controls (Requires hotkey setup)."
  },
  "buttons": [
    {
      "label": "Start Rec",
      "type": "key",
      "combos": {
        "win": "CTRL+SHIFT+R",
        "mac": "GUI+SHIFT+R"
      },
      "icon": "online:mdi:record-rec",
      "labelSize": 18,
      "labelColor": "#000000",
      "iconColor": "#ffffff",
      "btnBgColor": "#5B5B5B",
      "iconScale": 0
    },
    {
      "label": "Stop Rec",
      "type": "key",
      "combos": {
        "win": "CTRL+ALT+R",
        "mac": "GUI+OPT+R"
      },
      "icon": "online:mdi:stop",
      "labelSize": 18,
      "labelColor": "#000000",
      "iconColor": "#ffffff",
      "btnBgColor": "#5B5B5B",
      "iconScale": 0
    },
    {
      "label": "Start Stream",
      "type": "key",
      "combos": {
        "win": "CTRL+SHIFT+S",
        "mac": "GUI+SHIFT+S"
      },
      "icon": "online:mdi:broadcast",
